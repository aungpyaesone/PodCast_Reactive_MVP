<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#7C252525</item>

    </style>

    <style name="playBackText" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_regular_3x</item>
    </style>

    <style name="detailIconStyle" parent="Theme.MaterialComponents.Light">
        <item name="android:drawablePadding">@dimen/margin_medium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>



</resources>